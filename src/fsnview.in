#!/bin/bash

prefix=@prefix@
pkgdatadir=@datarootdir@/@PACKAGE@
PYTHON=@PYTHON@

echo "Debug: \$PYTHON=$PYTHON" >&2

if [ $# -lt 1 ]; then
  echo "Usage: $0 disk_image" >&2
  exit 1
fi

imagefile=$1

"$pkgdatadir/nversion.mk" \
  FIWALK_MAYBE_ALLOC_ONLY="-O" \
  PKGDATADIR="$pkgdatadir" \
  PREFIX="$prefix" \
  PYTHON="$PYTHON" \
  IMAGE="$imagefile"
